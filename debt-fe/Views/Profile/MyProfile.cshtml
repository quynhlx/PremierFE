@using debt_fe.Models
@model xp_debtuser_getinfo_Result
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="modal-changerequest" tabindex="-1" role="dialog" aria-labelledby="changerequest">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header center-block"><h4>Change Request</h4></div>
            <div class="modal-body">
                @using (Html.BeginForm("ChangeRequest", "Profile", FormMethod.Post, new {id="changerequest" }))
                {
                    <label class="label-bold">Your request content</label>
                    @Html.TextArea("request-content", new { style = "width: 100%; min-height: 300px;" })
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary btn-confirm" onclick="$('#changerequest').submit()">Send</button>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 mt++ mb++">
    <button class="btn btn-primary" data-toggle="modal" data-target="#modal-changerequest">Change Request</button> (Latest request sent at 08/19/2015, 10:38 AM )
</div>

<div class="row ph+">
    <div class="col-md-6">
        <div class="row">
            <div class="form-inline">

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="label-bold">First Name</label>
                        @Html.TextBoxFor(m => m.memFirstName, new { @class = "form-control" })
                        @*<input type="text" class="form-control" value="Allen" />*@
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label class="label-bold">Last Name</label>
                        @Html.TextBoxFor(m => m.memLastName, new { @class = "form-control" })
                        @*<input type="text" class="form-control" value="Pham" />*@
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label class="label-bold">Married</label>
            <select class="form-control">
                <option value="Select One">-- Select One --</option>
                <option value="Single">Single</option>
                <option value="Married">Married</option>
            </select>
        </div>
    </div>
</div>
<div class="row ph+ mb+">
    <!-- phone -->
    <div class="col-md-6">
        <label class="label-bold">Phone</label>
        <div class="form-inline ">
            <div class="form-group">
                <label class="sr-only">Home Phone</label>
                @Html.TextBoxFor(m => m.memHomePhone, new { @class = "form-control", placeholder = "Home Phone" })
                @*<input type="text" class="form-control" placeholder="Home Phone" />*@
            </div>
            <div class="form-group check-radio">
                <div class="radio">
                    <label>
                        <input type="radio" aria-label="preferred home phone" name="preferred" />
                    </label>
                </div>
                <label class="sr-only label-check">Preferred</label>

            </div>
            @*<div class="form-group">
                    <a href="#" data-toggle="modal" data-target="#modal-validate-phone">Validate</a>
                </div>*@
        </div>

        <div class="form-inline mv ">
            <div class="form-group">
                <label class="sr-only label-bold">Work Phone</label>
                <div class="radio">
                    @Html.TextBoxFor(m => m.memWorkPhone, new { @class = "form-control", placeholder = "Work Phone" })
                    @*<input type="text" class="form-control" placeholder="Work Phone" />*@
                </div>

            </div>
            <div class="form-group check-radio">
                <div class="radio">
                    <input type="radio" aria-label="preferred work phone" name="preferred" />
                </div>
                <label class="sr-only label-check">Preferred</label>

            </div>

        </div>

        <div class="form-inline ">
            <div class="form-group">
                <label class="sr-only">Mobile Phone</label>
                @Html.TextBoxFor(m => m.memPhone, new { @class = "form-control", placeholder = "Mobile Phone" })
            </div>
            <div class="form-group check-radio">
                <div class="radio">
                    <input type="radio" aria-label="preferred mobile phone" name="preferred" checked="checked" />
                </div>
                <label class="label-check">Preferred</label>
            </div>
        </div>
    </div>

    <!-- email -->
    <div class="col-md-6">
        <div class="form-group">
            <label class="label-bold">Fax</label>
            <input type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label class="label-bold">Email</label>
            @Html.TextBoxFor(m => m.memEmail, new { @class = "form-control", placeholder = "Email Address" })
            @*<input type="email" class="form-control" placeholder="Email Address" value="allen.pham@gmail.com" />*@
        </div>
    </div>
</div>
<div class="row ph+">
    <div class="col-md-6">
        <div class="form-group">
            <label class="label-bold">Best Time to Contact</label>
            <input type="text" class="form-control" />
        </div>
    </div>
</div>
<div class="row ph+">

    <div class="col-md-12">
        <label class="label-bold">Address</label>
    </div>

    <!-- address1 -->
    <div class="col-md-6">
        <div class="form-group">
            <!--<label class="label-bold">Address</label>-->
            @Html.TextBoxFor(m => m.memAddress, new { @class = "form-control", placeholder = "Street Address" })
        </div>
        <div class="form-group">
            <label class="sr-only">City</label>
            @Html.TextBoxFor(m => m.memCity, new { @class = "form-control", placeholder = "City" })
        </div>
    </div>

    <!-- address1 -->
    <div class="col-md-6">
        <div class="form-inline">
            <div class="form-group">
                <label class="sr-only">Zip</label>
                @Html.TextBoxFor(m => m.memZip, new { @class = "form-control", placeholder = "Zip" })
            </div>
        </div>
        <div class="form-inline mt+">
            <div class="form-group">
                <label class="sr-only">State</label>
                @Html.DropDownListFor(m => m.memState, ViewBag.States as SelectList, new { @class = "form-control" })
            </div>
        </div>
    </div>
</div>
<div class="row ph+">
    <div class="">
        <label class="checkbox-inline label-bold">Language: </label>
        <label class="checkbox-inline">
            <input type="radio" id="inlineCheckbox1" value="option1" name="Language"> English
        </label>
        <label class="checkbox-inline">
            <input type="radio" id="inlineCheckbox2" value="option2" name="Language"> Spanish
        </label>

    </div>
</div>
<hr />
<div class="row ph+ mt++">
    <div class="col-md-6">
        <div class="row">
            <div class="form-inline">

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="label-bold">Co-Client First Name</label>
                        <input type="text" class="form-control" value="Carol" />
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label class="label-bold">Last Name</label>
                        <input type="text" class="form-control" value="Le" />
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>
<div class="row ph+">

    <div class="col-md-12">
        <label class="label-bold">Co-Client Address</label>
    </div>

    <!-- address1 -->
    <div class="col-md-6">
        <div class="form-group">
            <!--<label class="label-bold">Address</label>-->
            <input type="text" placeholder="Street Address" class="form-control" value="9353 Bolsa Ave. Suite M95" />
        </div>
        <div class="form-group">
            <label class="sr-only">City</label>
            <input type="text" placeholder="City" class="form-control" value="Westminster" />
        </div>
    </div>

    <!-- address1 -->
    <div class="col-md-6">
        <div class="form-inline">
            <div class="form-group">
                <label class="sr-only">Zip</label>
                <input type="text" placeholder="Zip" class="form-control" value="92683" />
            </div>
        </div>
        <div class="form-inline mt+">
            <div class="form-group">
                <label class="sr-only">State</label>
                @Html.DropDownList("state", ViewBag.States as SelectList, new { @class = "form-control" })
            </div>
        </div>
    </div>
</div>
<div class="row ph+">
    <div class="col-md-12">
        <label class="label-bold">Co-Client Address</label>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <input type="text" placeholder="City" class="form-control" value="abc123@gmail.com" />
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(".check-radio").click(function () {
            $(".check-radio > label").addClass("sr-only");
            $(this).children(".label-check").removeClass("sr-only");
        });
    </script>
}