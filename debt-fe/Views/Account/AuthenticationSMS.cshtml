@model debt_fe.Models.ViewModels.AuthenticationViewModel
@{
    ViewBag.Title = "AuthenticationSMS";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <a href="#" class="text-center display-block p++">
                <img src='@Url.Content("~/Content/images/logo.png")' />
            </a>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal m0 pb0", id = "form-login" }))
            {
                <div class="row">
                    <div class="col-md-offset-3 col-md-6">
                        <h3 class="text-center text-bold">Multi-Factor Authentication</h3>
                        <hr />
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-3">
                        <img class="img-responsive pull-right" style="width : 30px;" src="~/Content/images/icon-tfa.png" />
                    </div>
                    <div class="col-sm-6">
                        Enter verification code generated by your phone ending in - @Model.HideNumber
                    </div>
                </div>

                <h4 class="login-error-summary">@Html.ValidationSummary()</h4>
                <div class="row center-block">
                    <div class="col-xs-6  form-group " style="margin-left: 25%!important;">
                        <label class="control-label text-bold">Step 2: Enter verification code</label>
                        <div>
                            @Html.TextBoxFor(m => m.SMSCode, htmlAttributes: new { @class = "form-control no-border-radius" })
                        </div>
                    </div>
                </div>
                

                <div class="form-group text-center">
                    <div class="col-xs-6 col-xs-offset-3">
                        <button type="submit" class="btn btn-primary">Verify</button>
                        <div>Code not working? (<span id="time-down">30</span>s)</div>
                        <div><a href="#" class="hidden">Code not working?</a></div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

