@using debt_fe.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Log in";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <a href="#" class="text-center display-block p++">
                <img src='@Url.Content("~/Content/images/logo.png")' />
            </a>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal m0 pb0", id = "form-login" }))
            {
                <h4 class="login-error-summary">@Html.ValidationSummary()</h4>
                <h3 class="text-center text-uppercase mb++">LOGIN</h3>
                <div class="form-group">
                    <label class="col-md-3 control-label font-weight-500">Username</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Username, htmlAttributes: new { @class = "form-control no-border-radius" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label font-weight-500">Password</label>
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control no-border-radius" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <button type="submit" class="btn btn-default">LOGIN</button>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}