@using debt_fe.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Log in";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <a href="#" class="text-center display-block p++">
                <img src='@Url.Content("~/Content/images/logo.png")' />
            </a>
            @using (Html.BeginForm("Login", "AccountCustom", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "form-login" }))
            {
                <h3 class="text-center text-uppercase mb++">LOGIN</h3>
                <div class="form-group">
                    <label class="col-md-3 control-label font-weight-500">User name</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control no-border-radius" value="" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label font-weight-500">Password</label>
                    <div class="col-md-9">
                        <input type="password" class="form-control no-border-radius" value="" />
                    </div>
                </div>
            }
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}